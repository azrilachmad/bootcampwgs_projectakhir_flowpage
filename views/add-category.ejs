<div class="container mt-3">
    <div class="row">
      <div class="col-md-6">
        <h2>Add Product Category </h2>
  
        <% if (typeof errors !="undefined" ) { %>
  
          <div class="alert alert-danger" role="alert">
            <ul>
              <% errors.forEach(error=> { %>
                <li><%= error.message %></li>
                  <% }) %> <% } %>
                    </ul>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <% if (messages.error) { %>
                        <div class="alert alert-success alert-dismissible fade
                          show" role="alert">
                          <strong><%= messages.error %>
                            </strong>
                            <button type="button" class="close"
                              data-bs-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <% } else {%> <% } %>
                            </div>
                          </div>
  
                          <% let data; %>
                            <% if (locals.params) { data= params %>
                              <% } %>
  
                                <form method="post" action="/item-list/add-category"
>
                                  <div class="mb-3">
                                    <label for="item_name" class="form-label">Category
                                      Name :</label>
                                    <input type="text" class="form-control"
                                      id="category" name="category" value="<%= data?.item_name %>"
                                      required>
                                  </div>
                                  

  
  
                                    <button type="submit" 
                                      class="btn btn-primary">
                                      Add Product
                                    </button>
                                  </form>
                                </div>
                              </div>
                            </div>